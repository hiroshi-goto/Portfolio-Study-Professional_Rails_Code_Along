<h1>Posts</h1>
<%= current_user.first_name %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-sm table-hover table-striped">
        <thead>
          <tr>
            <th>
              #
            </th>
            <th>
              Date
            </th>
            <th>
              User
            </th>
            <th>
              Rationale
            </th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= post.id %>
              </td>
              <td>
                <%= post.date %>
              </td>
              <td>
                <%= post.user.full_name %>
              </td>
              <td>
                <%= post.rationale %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

