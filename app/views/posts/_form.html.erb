<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @post, role: 'form' do |f|  %>
        <form role="form">
          <div class="form-group">
            <%= f.label :date, for: 'exampleInputEmail1' %>
            <%= f.date_field :date, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :rationale, for: 'exampleInputEmail1' %>
            <%= f.text_area :rationale, class: 'form-control' %>
          </div>
          <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>
